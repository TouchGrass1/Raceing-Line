#move feature
moving = False
elif event.type == MOUSEBUTTONDOWN:
      if rect.collidepoint(event.pos):
          moving = True
  elif event.type == MOUSEBUTTONUP:
      moving = False

  # Make your image move continuously
  elif event.type == MOUSEMOTION and moving:
      rect.move_ip(event.rel)

#Zoom feature
import cv2
# cv2.INTER_AREA (best for shrinking) and cv2.INTER_CUBIC (best for enlarging)
image_shape = (x,y)
scale = x/y
speed = 1
elif event.type == pygame.MOUSEBUTTONDOWN:
            if event.button == 4:  # Scroll up only counts one scroll, as it counts as one event
                  new_size = (x+scale*speed, y+speed)
                  resized_image = cv2.resize(image, new_size, interpolation=cv2.INTER_CUBIC)
            elif event.button == 5:  # Scroll down
                  new_size = (x-scale*speed, y-speed)
                  resized_image = cv2.resize(image, new_size, interpolation=cv2.INTER_AREA)

